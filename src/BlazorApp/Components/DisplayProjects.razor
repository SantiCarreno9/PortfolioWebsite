<div>
    <div class="row justify-content-center">
        @if (Projects == null)
        {
            <p><em>Loading...</em></p>
        }
        else
        {
            @foreach (var project in Projects)
            {
                if (project == null)
                    continue;
                <div class="card col-md-3 m-2 px-0" @onclick="()=>TriggerSelection(project.Id)">
                    @if (project.MediaContent != null && project.MediaContent.ContainsKey((int)MediaContentType.Image))
                    {
                        <div class="w-100 h-100" style="overflow:clip;">
                            <img class="img-thumbnail h-100" src="@project.MediaContent[(int)MediaContentType.Image][0]" />
                        </div>
                    }
                    <div class="card-body">
                        <h5 class="card-title-mb-3">
                            @project.Title
                        </h5>
                        @* <div class="">
                            <img class="category-logo" src=@Logos.GetLogoByCategory(project.Category??ProjectCategory.All) />
                        </div> *@
                    </div>
                </div>
            }
        }
    </div>
</div>
